package com.myspace.demo20220225;
import com.myspace.demo20220225.Person;

rule "Can Buy"
when
  $p : Person( age >= 18, canBuy == null )
then
  modify( $p ) {
      setCanBuy( true );
  }
end

rule "CanNOT Buy"
when
  $p : Person( age < 18, canBuy == null )
then
  modify( $p ) {
      setCanBuy( false );
  }
end